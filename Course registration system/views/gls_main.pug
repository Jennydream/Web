doctype html
html
  head
    title Welcome GLS
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.3.1.min.js', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
    script(src='/javascript/script.js')
    link(rel='stylesheet', type='text/css', href='/css/style.css')
  
  body
    #gls_row
      img(src='/image/gls_head.jpg', style='width:100%')
    #gls_ver.row
      #gls_verNav
        ul#gls_navBar.nav.flex-column.nav-pills         
          
          if (student_id == "admin")
            li.nav-item
              a(class = 'nav-link link', href='#home' id="home") Home
            li.nav-item
              a(class = 'nav-link link', href='#' id ="add") Add Course
            li.nav-item
              a(class = 'nav-link link', href='#list' id="list") Course List
          else 
            li.nav-item
              a(class = 'nav-link link', href='#home' id="home") Home
            li.nav-item
              a(class = 'nav-link link', href='#' id='student') Stduent Info
            li.nav-item
              a(class = 'nav-link link', href='#' id='course') Course Info
            li.nav-item
              a(class = 'nav-link link', href='#bag' id='bag') Course bag       
            li.nav-item
              a(class = 'nav-link link', href='sugang') Go To Sugang

      #gls_content
        
        if(temp != 0 )
          #homeContent(style = "display:none;")
        
        else 
          #homeContent
            center
              img(src='/image/gls_home.jpg')  

        #addContent(style = "display:none;")
          h3 Add Course 
          form(id = "courseForm")
            ps
              | Class ID 
              input#clas(type='text', name='class')
            p
              | Class Name
              input#Cname(type='text', name='cname')
            p
              | Professor
              input#pro(type='text', name='profe')
            p
              | Maximum Students
              input#max(type='text', name='Mstudent')
            p
              | Credit
              input#cred(type='text', name='credit')
            button#courseBtn.btn.btn-info.btn-lg(type='button', style='position: absolute;') Add Course
        
        #listContent(style = "display:none;")       
          h3 Registerd Courses
          table.table.table-bordered.table-hover
            thead
              th Class ID
              th Class Name
              th Professor
              th Credit
              th Maximum Student
              th Now Registered Students
            tbody            
              -for(var i=0; i<clength; i++)
                td #{carry[i].class}
                td #{carry[i].cname}
                td #{carry[i].profe}
                td #{carry[i].credit}
                td #{carry[i].Mstudent}
                td #{carry[i].regi_student} 
                tr

        #studentContent(style = "display:none;")
          h3 Student Imformation
          table.table.table-bordered.table-hover
            thead

              tr
                th(colspan="2") Name
                td(colspan="2") #{namee}            
              tr
                th(colspan="2") Student ID
                td(colspan="2") #{student_id}
              tr
                th Birth
                td #{birthh}
                th Allowable Credits
                td 18
              tr
                th(colspan="2") Major
                td(colspan="2") #{departmentt}

        #courseContent(style = "display:none;")
          h3 Registerd Courses
          table.table.table-bordered.table-hover
            thead
              th Class ID
              th Class Name
              th Professor
              th Credit
              th Maximum Student
            tbody         
              -for(var i=0; i<clength; i++)             
                if (carry[i].sugangvalue == 4)
                  td #{carry[i].class}
                  td #{carry[i].cname}
                  td #{carry[i].profe}
                  td #{carry[i].credit}
                  td #{carry[i].Mstudent}                                   
                  tr
        if(temp<0 )
          #bagContent(style = "display:none;")  
        else      
          #bagContent
            h3 Course List
            table.table.table-bordered.table-hover 
              thead
                th Class ID
                th Class Name
                th Professor
                th Credit
                th Maximum Student
                th Put in Bag
              tbody            
                -for(var i=0; i<clength; i++)
                  td #{carry[i].class}
                  td #{carry[i].cname}
                  td #{carry[i].profe}
                  td #{carry[i].credit}
                  td #{carry[i].Mstudent}
                  td 
                    center
                      button.PutBtn.btn.btn-success.btn-lg(type='button', style='position', value=carry[i].class) Put in your bag
                  tr
            h3 Course Bag
            table.table.table-bordered.table-hover
                thead
                  th Class ID
                  th Class Name
                  th Professor
                  th Credit
                  th Maximum Student
                  th Number of Registered Students
                  th Put out from Bag         
                tbody            
                  -for(var i=0; i<clength; i++)
                    if (carry[i].bagvalue == 1)
                      td #{carry[i].class}
                      td #{carry[i].cname}
                      td #{carry[i].profe}
                      td #{carry[i].credit}
                      td #{carry[i].Mstudent}                                     
                      td #{carry[i].regi_student}                            
                      td 
                        center
                          button.OutBtn.btn.btn-info.btn-lg(type='button', style='position',outvalue=carry[i].class) Put out from your bag
                      tr 


